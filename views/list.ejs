<%- include('header') %>

  <div class="class box" id="heading">
    <h1>
      <%= listTitle %>
    </h1>
  </div>

  <div class="box">

    <!-- <li>Buy Food</li>
    <li>Cook Food</li>
    <li>Eat Food</li> -->
    

    <% newListItem.forEach(item=> { %>
      <form action="/delete" method="post">
        <div class="item" >
          <input type="checkbox" name="checkbox" value=<%=item._id%>       id="" onchange="this.form.submit()">
          <p>
            
            <%= item.name %>
          </p>
        </div>
      </form>
      <% }); %>
        <form action="/" method="post" class="newItem">
          <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
          <button type="submit" name="list" value=<%=listTitle %>>+</button>
        </form>
  </div>

  <%- include('footer') %>